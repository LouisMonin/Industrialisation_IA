{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CSV": true,
        "**/.DS_Store": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/AutoCarver.egg-info": true,
        "**/.ipynb_checkpoints": true,
    },
    "python.formatting.provider": "none",
    "python.testing.pytestArgs": [
        "tests"
    ]
}